<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.RelativeLayout"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ColorTileBackground" />
    <ImageView
        android:id="@+id/input_element_image"
        android:layout_width="@dimen/sizeIcon"
        tools:src="@drawable/ic_trash"
        android:layout_centerInParent="true"
        tools:ignore="ContentDescription"
        android:layout_height="@dimen/sizeIcon"
        app:tint="@color/colorImage" />
    <TextView
        android:id="@+id/input_element_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/colorText"
        android:textSize="@dimen/textSizeInputElement"
        android:textStyle="normal"
        tools:text="1"/>
    <View
        android:id="@+id/input_element_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        />
</merge>